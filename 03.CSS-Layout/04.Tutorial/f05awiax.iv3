body, aside, section, div, ul, h2, h3, h1 {
    padding: 0;
    margin: 0;
}

body {
    margin: 5px;
    border: 0px solid black;
    background-color: lightgrey;
    border-radius: 5px;
}

aside.left {
    margin-left: 5px;
    float: left;
    max-width: 200px;
}

aside.right {
    margin-left: 2px;
    float: left;
    max-width: 200px;
}

ul {
    list-style: none;
}

a {
    text-decoration: none;
    color: black;
}

aside.left > ul > li > a {
    font-size: 1.2em;
    font-weight: bold;
    color: #a83434;
    padding-top: 10px;
}

aside.left > ul > li {
    padding-top: 20px;
}

aside.right > div {
    border: 1px solid gray;
    margin: 1px;
    background-color: white;
}

aside.right a {
    color: darkred;
    text-decoration: underline;
    padding-left: 2px;
    padding-right: 2px;
    display: block;
    text-align: center;
}

    aside.right a:first-child {
        padding-top: 5px;
    }

    aside.right a:last-child {
        padding-bottom: 5px;
    }

h1 {
    font-family: Calibri;
    font-size:2em;
    font-weight:400;
}

h2 {
    font-size: 1.25em;
    font-weight: bold;
    margin: 0;
    margin-top: 20px;
}

h3 {
    color: white;
    background-color: darkgray;
    text-align: center;
}

#stylesButton {
    width: 125px;
    height: 40px;
    border-radius: 0;
    margin-left: 35px;
    margin-top: 2px;
    border: 1px solid #12649b;
    font-weight: bold;
    color: #60c9dd;
    background: #07b5f9; /* Old browsers */
    /* IE9 SVG, needs conditional override of 'filter' to 'none' */
    background: url(data:image/svg+xml;base64,);
    background: -moz-linear-gradient(left, #07b5f9 1%, #bfe8f9 9%, #bfe8f9 48%, #9fd8ef 91%, #2ab0ed 100%); /* FF3.6+ */
    background: -webkit-gradient(linear, left top, right top, color-stop(1%,#07b5f9), color-stop(9%,#bfe8f9), color-stop(48%,#bfe8f9), color-stop(91%,#9fd8ef), color-stop(100%,#2ab0ed)); /* Chrome,Safari4+ */
    background: -webkit-linear-gradient(left, #07b5f9 1%,#bfe8f9 9%,#bfe8f9 48%,#9fd8ef 91%,#2ab0ed 100%); /* Chrome10+,Safari5.1+ */
    background: -o-linear-gradient(left, #07b5f9 1%,#bfe8f9 9%,#bfe8f9 48%,#9fd8ef 91%,#2ab0ed 100%); /* Opera 11.10+ */
    background: -ms-linear-gradient(left, #07b5f9 1%,#bfe8f9 9%,#bfe8f9 48%,#9fd8ef 91%,#2ab0ed 100%); /* IE10+ */
    background: linear-gradient(to right, #07b5f9 1%,#bfe8f9 9%,#bfe8f9 48%,#9fd8ef 91%,#2ab0ed 100%); /* W3C */
    filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#07b5f9', endColorstr='#2ab0ed',GradientType=1 ); /* IE6-8 */
}

aside.right input {
    display: inline-block;
    width: 70%;
    margin-left: 10px;
    margin-top: 5px;
}

aside.right button:first-child {
    width: 30px;
}

section {
    float: left;
    padding: 5px;
    background-color: white;
    border: 1px solid gray;
}

    section button {
        width: 110px;
        height: 25px;
        font-family: Calibri;
        border-radius: 0;
        border: 2px solid black;
        padding: 0;
        background-color: white;
        font-weight: 400;
    }
